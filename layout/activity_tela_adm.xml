<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".telaAdm">

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nome"
        style="@style/Edit_Text"
        android:hint="Nome"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents" />

    <EditText
        android:id="@+id/email"
        style="@style/Edit_Text"
        android:drawableRight="@drawable/ic_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/nome" />

    <EditText
        android:id="@+id/instagram"
        style="@style/Edit_Text"
        android:hint="Instagram"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <EditText
        android:id="@+id/telefone"
        style="@style/Edit_Text"
        android:hint="Telefone"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/instagram" />

    <EditText
        android:id="@+id/atividades"
        style="@style/Edit_Text"
        android:hint="Atividades"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/telefone" />

    <EditText
        android:id="@+id/valor"
        style="@style/Edit_Text"
        android:hint="Valor"
        android:inputType="number"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/atividades" />

    <EditText
        android:id="@+id/aparelhos"
        style="@style/Edit_Text"
        android:hint="Aparelhos"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/valor" />

    <EditText
        android:id="@+id/rua"
        style="@style/Edit_Text"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:hint="Rua"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/aparelhos" />

    <EditText
        android:id="@+id/numero"
        style="@style/Edit_Text"
        android:hint="NÃºmero"
        android:inputType="number"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/rua" />

    <EditText
        android:id="@+id/bairro"
        style="@style/Edit_Text"
        android:hint="Bairro"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/numero" />

    <EditText
        android:id="@+id/cidade"
        style="@style/Edit_Text"
        android:hint="Cidade"
        android:inputType="text"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/bairro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CadastrarAcad"
        style="@style/button"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:text="@string/botao_cadastro"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/cidade" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>